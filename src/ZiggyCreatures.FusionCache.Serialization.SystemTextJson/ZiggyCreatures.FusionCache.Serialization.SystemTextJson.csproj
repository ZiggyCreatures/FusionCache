<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<Version>0.10.0-preview1</Version>
		<Authors>Jody Donetti</Authors>
		<Company>Jody Donetti</Company>
		<Product>FusionCache</Product>
		<PackageId>ZiggyCreatures.FusionCache.Serialization.SystemTextJson</PackageId>
		<Copyright>Copyright Â© Jody Donetti 2022</Copyright>
		<PackageIcon>logo-128x128.png</PackageIcon>
		<Description>FusionCache serializer based on System.Text.Json</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>caching;cache;multi-level;multilevel;fusion;fusioncache;fusion-cache;performance;async;ziggy</PackageTags>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<RootNamespace>ZiggyCreatures.FusionCaching.Serialization.SystemTextJson</RootNamespace>
		<PackageProjectUrl>https://github.com/jodydonetti/ZiggyCreatures.FusionCache</PackageProjectUrl>
